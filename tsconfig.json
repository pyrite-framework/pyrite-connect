{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es7",
			"dom"
		],
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"outDir": "./lib",
		"declaration": true
	},
	"exclude": [
		"node_modules",
		"example"
	]
}